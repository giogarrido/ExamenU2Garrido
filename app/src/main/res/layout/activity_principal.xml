<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/grupo2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_detalles"
            android:layout_width="237dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_button"
            android:text="Detalles"
            android:textSize="@dimen/menu_buttons_text" />

        <Button
            android:id="@+id/btn_globos"
            android:layout_width="237dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_button"
            android:text="Globos"
            android:textSize="@dimen/menu_buttons_text" />

        <Button
            android:id="@+id/btn_peluches"
            android:layout_width="237dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_button"
            android:text="Peluches"
            android:textSize="@dimen/menu_buttons_text" />
        <Button
            android:id="@+id/btn_regalos"
            android:layout_width="237dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_button"
            android:text="Regalos"
            android:textSize="@dimen/menu_buttons_text" />
        <Button
            android:id="@+id/btn_tazas"
            android:layout_width="237dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_button"
            android:text="Tazas"
            android:textSize="@dimen/menu_buttons_text" />


    </LinearLayout>


</LinearLayout>