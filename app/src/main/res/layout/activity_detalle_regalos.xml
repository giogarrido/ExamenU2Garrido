<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DetalleRegalos">

    <ImageView

        android:id="@+id/iv_regalo_imagen"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/menu_buttons_paddings"
        android:layout_marginBottom="@dimen/menu_buttons_paddings"
        android:src="@drawable/cumplebotanas"
/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/tv_regalo_titulo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="@color/pink"
            android:paddingLeft="20dp"
            android:textSize="@dimen/menu_buttons_text"
            android:text="titulo"/>

        <TextView
            android:id="@+id/tv_regalo_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="40dp"
            android:textSize="@dimen/menu_buttons_text"
            android:textColor="@color/pink"

            android:text="Precio"/>

    </LinearLayout>


</LinearLayout>