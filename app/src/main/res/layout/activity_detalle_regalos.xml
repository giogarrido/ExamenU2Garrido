<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleRegalos">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/cumplebotanas"
        android:layout_marginTop="@dimen/menu_buttons_paddings"
        android:layout_marginBottom="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_regalo_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="90dp"
            android:paddingEnd="70dp"
            android:textColor="@color/pink"
            android:textSize="@dimen/menu_buttons_text"
            android:text="cumple"/>

        <TextView
            android:id="@+id/tv_regalo_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="40dp"
            android:textSize="@dimen/menu_buttons_text"
            android:textColor="@color/pink"

            android:text="Precio"/>

    </LinearLayout>


</LinearLayout>